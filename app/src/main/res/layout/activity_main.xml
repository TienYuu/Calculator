<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:orientation="vertical"
        android:background="#E1E1E1"
        >

        <TextView
            android:id="@+id/PhepTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:background="#E1E1E1"
            android:textSize="50dp"
            android:gravity="right|center"
            android:text="" />

        <TextView
            android:id="@+id/KetQua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:background="#E1E1E1"
            android:textSize="50dp"
            android:gravity="right|center"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnCE"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:textSize="32dp"
                android:layout_weight="1"
                android:background="#DEDEDE"
                android:text="CE" />

            <Button
                android:id="@+id/BtnC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#DEDEDE"
                android:text="C" />

            <Button
                android:id="@+id/BtnBS"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#DEDEDE"
                android:text="BS" />

            <Button
                android:id="@+id/BtnChia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#DEDEDE"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/Btn7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#EFEFEF"
                android:text="7" />

            <Button
                android:id="@+id/Btn8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#EFEFEF"
                android:text="8" />

            <Button
                android:id="@+id/Btn9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#EFEFEF"
                android:text="9" />

            <Button
                android:id="@+id/BtnNhan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#DEDEDE"
                android:text="x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Btn4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#EFEFEF"
                android:textSize="32dp"
                android:text="4" />

            <Button
                android:id="@+id/Btn5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#EFEFEF"
                android:textSize="32dp"
                android:text="5" />

            <Button
                android:id="@+id/Btn6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#EFEFEF"
                android:text="6" />

            <Button
                android:id="@+id/BtnTru"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#DEDEDE"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Btn1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#EFEFEF"
                android:text="1" />

            <Button
                android:id="@+id/Btn2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#EFEFEF"
                android:textSize="32dp"
                android:text="2" />

            <Button
                android:id="@+id/Btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#EFEFEF"
                android:text="3" />

            <Button
                android:id="@+id/BtnCong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#DEDEDE"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button30"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:textSize="32dp"
                android:background="#DEDEDE"
                android:text="+/-" />

            <Button
                android:id="@+id/Btn0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#EFEFEF"
                android:textSize="32dp"
                android:text="0" />

            <Button
                android:id="@+id/button32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#DEDEDE"
                android:textSize="32dp"
                android:text="." />

            <Button
                android:id="@+id/BtnBang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="#DEDEDE"
                android:textSize="32dp"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>